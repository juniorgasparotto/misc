<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/purchase_layout_header"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_2dp"
    >

        <TextView
            android:id="@+id/purchase_txt_card_number"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white_54"
            android:fontFamily="Roboto-Bold"
            />

        <ImageView
            android:id="@+id/purchase_img_card_flag"
            android:layout_width="52.4dp"
            android:layout_height="16.1dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3.9dp"
            android:layout_marginRight="9.6dp"
            />

    </RelativeLayout>
</RelativeLayout>