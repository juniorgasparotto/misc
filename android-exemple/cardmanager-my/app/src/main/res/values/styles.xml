<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextInputAppearance" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Login.LoginAndPwd" parent="AppTheme.TextInputAppearance">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_button</item>
    </style>

    <style name="AppTheme.Login.Buttons" parent="AppTheme.Button">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="AppTheme.LoadingDialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Register.Texts" parent="">
        <item name="android:layout_margin">8dp</item>
        <item name="colorAccent">@color/warm_grey</item>
        <item name="colorControlNormal">@color/warm_grey</item>
        <item name="colorControlActivated">@color/warm_grey</item>
        <item name="android:textColorHint">@color/warm_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="AppTheme.Register.Buttons" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/orangish</item>
    </style>

    <style name="AppTheme.Register.CheckBox" parent="">
        <!--<item name="android:layout_marginTop">29dp</item>-->
    </style>

    <style name="NavigationViewStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
</resources>
