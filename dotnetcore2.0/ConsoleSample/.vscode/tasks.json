{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [{
            "taskName": "cmd-first-build",
            "command": "cmd",
            "args": ["/C", "dotnet restore & scripts\\dbupdate.bat"],
            "suppressTaskName": true,
            "showOutput": "always",
            "echoCommand": true
        }, {
            "taskName": "cmd-build",
            "command": "cmd",
            "args": ["/C dotnet build"],
            "suppressTaskName": true,
            "showOutput": "always",
            "echoCommand": true
        }, {
            "taskName": "cmd-restore-build",
            "command": "cmd",
            "args": ["/C dotnet restore & dotnet build"],
            "suppressTaskName": true,
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "cmd-dbupdate",
            "command": "cmd",
            "args": ["/C", "scripts\\dbupdate.bat"],
            "suppressTaskName": true,
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "cmd-clean",
            "command": "cmd",
            "args": ["/C", "scripts\\clean.bat"],
            "suppressTaskName": true,
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "cmd-clean-all",
            "command": "cmd",
            "args": ["/C", "scripts\\clean-all.bat"],
            "suppressTaskName": true,
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "cmd-drop-db",
            "command": "cmd",
            "args": ["/C", "scripts\\dropdb.bat"],
            "suppressTaskName": true,
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "cmd-restore",
            "command": "cmd",
            "args": ["/C", "scripts\\restore.bat"],
            "suppressTaskName": true,
            "showOutput": "always",
            "echoCommand": true
        }
    ]
}